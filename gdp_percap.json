{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "url": "https://raw.githubusercontent.com/AziizPP/AziizPP.github.io/refs/heads/main/API_NY.GDP.PCAP.CD_DS2_en_csv_v2_24794.csv"
  },
  "width": 400,
  "height": 300,
  "mark": {
    "type": "area",
    "line": {"color": "purple"},
    "color": {
      "x1": 1,
      "y1": 1,
      "x2": 1,
      "y2": 0,
      "gradient": "linear",
      "stops": [
        {"offset": 0, "color": "white"},
        {"offset": 1, "color": "purple"}
      ]
    }
  },
  "encoding": {
    "x": {"field": "date", "type": "temporal"},
    "y": {"field": "value", "type": "quantitative"}
  }
}